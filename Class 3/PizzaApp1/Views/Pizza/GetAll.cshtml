
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetAll</title>
</head>
<body>
    @{ 
        var listOfPizzas = new List<string>
        {
            "capri", "tono", "margarita", "vegetariana"
        };
    }
    <h1>All pizzas:</h1>
    <h3>There are @listOfPizzas.Count pizzas in total:</h3>
    <ul>
        @foreach (var item in listOfPizzas)
        {
            <li>@item</li>
        }
    </ul>
</body>
</html>
